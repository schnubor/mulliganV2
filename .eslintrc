{
    "extends": "vue",

    rules: {
        'indent': [2, 4, { 'SwitchCase': 1 }],
        'space-in-parens': ['error', 'always'],
        'object-curly-spacing': [2, 'always', { objectsInObjects: false }],
        'space-before-function-paren': [2, 'never'],
        'key-spacing': [2, { 'beforeColon': true, 'afterColon': true }],
        'semi': [2, 'always'],
    }
}